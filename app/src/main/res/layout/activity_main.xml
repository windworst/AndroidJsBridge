<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="WebView"
        android:textSize="18sp" />

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Native"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonFromJsSync"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fromJsSync"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/buttonFromJsAsync"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fromJsAsync"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/buttonSendToJs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SendToJs"
                android:textAllCaps="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonSyncCallTest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10000 Sync Call Test"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/buttonAsyncCallTest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10000 Async Call Test"
                android:textAllCaps="false" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
